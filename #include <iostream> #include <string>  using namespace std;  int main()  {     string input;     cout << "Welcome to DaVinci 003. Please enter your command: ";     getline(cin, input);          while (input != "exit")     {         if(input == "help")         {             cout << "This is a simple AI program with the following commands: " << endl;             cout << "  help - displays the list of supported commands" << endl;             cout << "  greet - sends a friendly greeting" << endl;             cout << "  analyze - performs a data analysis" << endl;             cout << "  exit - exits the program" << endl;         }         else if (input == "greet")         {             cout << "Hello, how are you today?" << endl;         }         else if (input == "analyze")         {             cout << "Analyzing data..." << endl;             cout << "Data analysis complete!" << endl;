#include <iostream>
#include <string>

using namespace std;

int main() 
{
    string input;
    cout << "Welcome to DaVinci 003. Please enter your command: ";
    getline(cin, input);
    
    while (input != "exit")
    {
        if(input == "help")
        {
            cout << "This is a simple AI program with the following commands: " << endl;
            cout << "  help - displays the list of supported commands" << endl;
            cout << "  greet - sends a friendly greeting" << endl;
            cout << "  analyze - performs a data analysis" << endl;
            cout << "  exit - exits the program" << endl;
        }
        else if (input == "greet")
        {
            cout << "Hello, how are you today?" << endl;
        }
        else if (input == "analyze")
        {
            cout << "Analyzing data..." << endl;
            cout << "Data analysis complete!" << endl;
            
